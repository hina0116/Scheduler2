<h1>Task</h1>
<% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @task do |f| %>
    <h4>title</h4>
      <%= f.text_field :name %>
    <h4>text</h4>
      <%= f.text_area :content %>
    <%= f.submit '投稿' %>
  <% end %>
