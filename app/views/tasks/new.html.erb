<h1>メモ登録</h1>
<% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @task do |f| %>
    <h4>タイトル</h4>
      <%= f.text_field :name %>
    <h4>内容</h4>
      <%= f.text_area :content %>
    <%= f.submit '保存' %>
  <% end %>
