<h1>メモ一覧</h1>
<div>
  <%= link_to '新規登録', new_task_path, class: "btn btn-outline-secondary" %>
</div>

<% @task.each do |task| %>
<tr>
    <td>
      <%= link_to task_path(task.id) do %>
        <p><%= task.name %></p>
      <% end %>
    </td>
    <td><%= task.content %></td>
    <td><%= link_to "編集", edit_task_path(task), class: "btn btn-outline-secondary" %></td>
    <td><%= link_to "削除", task_path(task), method: :delete, class: "btn btn-outline-secondary" %></td>
  </tr>
<% end %>