<h1>メモ一覧</h1>
<div>
  <%= link_to 'メモ', tasks_path, class="btn btn-primary" %>
</div>

<% @task.each do |task| %>
<tr>
    <td>
      <%= link_to task_path(task.id) do %>
        <p><%= task.name %></p>
      <% end %>
    </td>
    <td><%= task.content %></td>
    <td><%= link_to "編集", edit_task_path(task) %></td>
    <td><%= link_to "削除", task_path(task), method: :delete %></td>
  </tr>
<% end %>