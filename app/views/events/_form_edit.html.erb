<div class="row">
  <%= form_with(model: event, url: event_path(event.id || 0), remote: true, method: :patch) do |f| %>
    <%#= render 'shared/error_messages', object: f.object %>

    <%= f.label :title, "内容"%>
    <%= f.text_field :title, class:'form-control mb-3', required: true %>

    <div class="form-inline text-left">
      <%= f.label :start,"開始時刻", {class:'control-label'}%>
      <%= f.datetime_field :start, {default: Date.today + 0.hours + 00.minutes, minute_step: 60, class: 'form-control'} %>
    </div>
    <br>
    <div class="form-inline text-left">
      <%= f.label :end,"終了時刻", {class:'control-label'}%>
      <%= f.datetime_field :end, {default: Date.today + 0.hours + 00.minutes, minute_step: 60, class: 'form-control'} %>
    </div>

    <%= f.submit "更新", class: "btn btn-primary js-event-create-btn" %>
    <%= link_to "削除", event_path(event.id || 0), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>

</div>